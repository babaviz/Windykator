<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateusz.windykator" >

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PersonActivity"
            android:label="@string/title_activity_add_person"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.WindykatorActivity"
            android:label="@string/title_activity_windykator" >
        </activity>
        <activity
            android:name=".activities.DebtActivity"
            android:label="@string/title_activity_add_debt" >
        </activity>
        <activity
            android:name=".activities.DebtEdit"
            android:label="@string/title_activity_debt_edit" >
        </activity>
        <activity
            android:name=".activities.MessageSendActivity"
            android:label="@string/title_activity_message_send">
        </activity>
    </application>

</manifest>
