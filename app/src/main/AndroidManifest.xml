<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateusz.windykator" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PersonActivity"
            android:label="@string/title_activity_add_person"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.WindykatorActivity"
            android:label="@string/title_activity_windykator" >
        </activity>
        <activity
            android:name=".Activities.DebtActivity"
            android:label="@string/title_activity_add_debt" >
        </activity>
    </application>

</manifest>